{
  "name": "bocf",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/bocf-cli.js",
  "module": "src/bocf-cli.js",
  "description": "build OCI Image Format images",
  "keywords": [
    "container",
    "OCI"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "bocf": "bin/bocf"
  },
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/bocf-cli.js --section=API",
    "lint": "documentation lint src/bocf-cli.js",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "caporal": "^0.10.0",
    "config-expander": "^10.2.5",
    "pump": "^3.0.0",
    "tar-stream": "^1.5.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "acorn-class-fields": "https://github.com/arlac77/acorn-class-fields.git",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^7.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "rollup": "^1.31.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.5.2",
    "semantic-release": "^17.0.2"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/bocf.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/bocf/issues"
  },
  "homepage": "https://github.com/arlac77/bocf#readme",
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
