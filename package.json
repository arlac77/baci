{
  "name": "bocf",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "dist/bocf-cli.js",
  "description": "build OCI Image Format images",
  "keywords": [
    "container",
    "OCI"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "bocf": "src/bocf-cli.mjs"
  },
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/bocf-cli.mjs --section=API && documentation readme dist/bocf-cli.js --section=API",
    "lint": "documentation lint src/bocf-cli.mjs && documentation lint dist/bocf-cli.js"
  },
  "dependencies": {
    "commander": "^4.0.1",
    "config-expander": "^10.2.5",
    "pump": "^3.0.0",
    "tar-stream": "^1.5.5"
  },
  "devDependencies": {
    "ava": "^3.8.1",
    "c8": "^7.1.1",
    "documentation": "^12.3.0",
    "semantic-release": "^17.0.7"
  },
  "engines": {
    "node": ">=12.16.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/bocf.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/bocf/issues"
  },
  "homepage": "https://github.com/arlac77/bocf#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-arlac77-github"
    ]
  }
}
