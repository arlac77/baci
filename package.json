{
  "name": "bocf",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "dist/bocf-cli.mjs",
  "exports": {
    ".": "dist/bocf-cli.mjs"
  },
  "description": "build OCI Image Format images",
  "keywords": [
    "OCI",
    "container"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "bocf": "src/bocf-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme dist/bocf-cli.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint dist/bocf-cli.mjs"
  },
  "dependencies": {
    "commander": "^6.0.0",
    "config-expander": "^11.0.13",
    "pump": "^3.0.0",
    "tar-stream": "^2.1.2"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "c8": "^7.3.5",
    "documentation": "^13.0.2",
    "semantic-release": "^17.2.1"
  },
  "engines": {
    "node": ">=12.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/bocf.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/bocf/issues"
  },
  "homepage": "https://github.com/arlac77/bocf#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-arlac77-github"
    ]
  }
}
